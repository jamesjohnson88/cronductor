<!-- Primary Button -->
<button class="button is-primary @AdditionalClasses" @onclick="OnClick">
    @ChildContent
</button>

@code {
    [Parameter]
    public string? AdditionalClasses { get; set; } = string.Empty;
    
    [Parameter]
    public EventCallback OnClick { get; set; }
    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}