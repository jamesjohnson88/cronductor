<!-- Request Card Molecule -->
<div class="box request-item p-4">
    <div class="mb-3">
        <h4 class="title is-6 mb-1">@Request.Name</h4>
        <p class="subtitle is-7 has-text-grey-light mb-0">@Request.Url</p>
    </div>
    <div class="columns is-vcentered is-mobile">
        <div class="column">
                    <div class="tags">
                        <StatusTag Text="@Request.Schedule" Status="info" />
                        <StatusTag Text="@(Request.IsActive? "Active" : "Inactive")"
                            Status="@(Request.IsActive? "active" : "inactive")" />
                    </div>
                </div>
                <div class="column is-narrow">
                    <EditDeleteButtons ItemId="@Request.Id" OnEdit="@OnEdit" OnDelete="@OnDelete" />
                </div>
            </div>
        </div>

@code {
   
    [Parameter]
        public RequestModel Request { get; set; } = new();
    
        [Parameter]
    public EventCallback<string> OnEdit { get; set; }
    
        [Parameter]
    public EventCallback<string> OnDelete { get; set; }
    
 }   
    