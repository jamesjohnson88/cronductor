@page "/"
@using Cronductor.Services

@inject RequestSchedulerService Scheduler

<h1>Cronductor Request Log</h1>
<p>This is a demo log of scheduled HTTP requests.</p>
<table class="table">
    <thead>
        <tr>
            <th>Timestamp (UTC)</th>
            <th>Generator</th>
            <th>Result</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Scheduler.GetLog().OrderByDescending(l => l.Split(' ')[0]).Take(50))
        {
            var parts = entry.Split(' ', 4);
            <tr>
                <td>@parts[0] @parts[1]</td>
                <td>@(parts.Length > 2 ? parts[2] : "")</td>
                <td>@(parts.Length > 3 ? parts[3] : "")</td>
            </tr>
        }
    </tbody>
</table>
